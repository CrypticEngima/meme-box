{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": ".",
    "rootDir": ".",
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "paths": {
      "@memebox/contracts": [
        "projects/contracts/src/public-api.ts"
      ]
    }
  },
  "files": [
    "main.ts",
    "server/express-server.ts",
    "server/websocket-server.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
